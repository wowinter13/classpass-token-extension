{
  "manifest_version": 3,
  "name": "ClassPass Token Extractor",
  "version": "1.0",
  "description": "Extracts ClassPass authorization token",
  "permissions": [
    "webRequest",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "*://classpass.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}